<Window x:Class="Repair2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repair2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350"
        WindowStartupLocation="CenterScreen">
    
    
    <Grid>
        <StackPanel>
            <Label Content="Введите логин" HorizontalAlignment="Center" FontSize="24" Margin="0,60,0,0" />
            <TextBox TextWrapping="Wrap" Height="33" Width="200" FontSize="18" Margin="0,10,0,0" MaxLength="15"/>
            <Label Content="Введите пароль" HorizontalAlignment="Center" FontSize="24" Margin="0,10,0,0" />
            <PasswordBox Width="200" FontSize="18" Margin="0,10,0,0" Height="33" MaxLength="20"/>
        </StackPanel>
        <Button x:Name="EnterButton" Content="Войти" HorizontalAlignment="Center" Margin="0,286,0,0" VerticalAlignment="Top" Height="48" Width="142" Click="EnterButton_Click"/>


    </Grid>
</Window>
