<Window x:Class="Repair2.ProccesOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repair2"
        mc:Ignorable="d"
        Title="ProccesOrderWindow" Height="450" Width="500">
    <Grid>
        <StackPanel>
            <Label Content="Выберите выполняемый заказ" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <ComboBox Width="495" Margin="0,5,0,0" Height="35"/>
            <Label Content="Выберите статус заказа" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <ComboBox Width="495" Margin="0,5,0,0" Height="35"/>
            <Label Content="Замененные неисправные компоненты" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <TextBox TextWrapping="Wrap" Width="495" Margin="0,5,0,0" Height="35" TextAlignment="Center" MaxLength="20"/>
        </StackPanel>
    </Grid>
</Window>
